<h3>詳細情報</h3>

<table>
    <tr>
        <th>タイトル</th>
        <td><%= @schedule.title%></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @schedule.start%></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @schedule.end%></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><%= @schedule.last%></td>
    </tr>
    <tr>
        <th>一言紹介</th>
        <td><%= @schedule.introduce%></td>
    </tr>
</table>

<div>
    <ul>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
     <li><%= link_to "編集", [:edit, :schedule] %></li>
    <li><%= link_to "削除", :schedule,method: :delete,data:{confirm:"本当に削除しますか？"} %></li>
  
    </ul>
</div>

